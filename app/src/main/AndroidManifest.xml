<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rafalmaselek.colorfun">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DifficultyLevelActivity" />
        <activity android:name=".RanksActivity" />
        <activity
            android:name=".EasyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NormalActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LevelRanksActivity"
            android:label="@string/title_activity_normal_ranks"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
